  "author": "Bridge Development Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.3",
    "@nomicfoundation/hardhat-ledger": "^3.0.1",
    "@openzeppelin/contracts": "^4.9.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "hardhat": "^3.0.15"
  },
  "dependencies": {
    "@chainsafe/bls": "^8.2.0",
    "@chainsafe/blst": "^1.1.0",
    "@ledgerhq/hw-app-eth": "^6.47.1",
    "@ledgerhq/hw-transport-node-hid": "^6.29.14",
    "@noble/curves": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/bridge-contracts.git"
  },
  "bugs": {
